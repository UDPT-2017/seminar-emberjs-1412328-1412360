{{outlet}}
<h1>Tasks</h1>
{{#each model as |task|}}
<div class="well">
  <h4>Title: {{#link-to 'tasks.edit' task.id}}{{task.title}}{{/link-to}}</h4>
  <small>Date: {{format-date task.date}}</small>
  <h4>Discription: {{task.description}}</h4>
  <button {{action 'deleteTask' task.id}} class="btn btn-danger">Delete</button>
</div>
{{/each}}
